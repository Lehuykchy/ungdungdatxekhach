<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/imgRoutesAddBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="30dp"
            android:layout_gravity="center_vertical"
            android:minHeight="48dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm chuyến đi"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Điểm xuất phát"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRoutesAddDepartureLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Điểm xuất phát"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Điểm đến"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRoutesAddDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Điểm đến"
                android:textSize="17dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tổng thời gian(phút)"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRoutesAddTotalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Tổng thời gian"
                android:inputType="phone"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Khoảng cách(Km)"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRoutesAddDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Địa chỉ"
                android:inputType="phone"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Giá vé(VNĐ)"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:paddingLeft="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRoutesAddPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Giá vé"
                android:inputType="phone"
                android:textSize="17dp"
                android:textColor="@color/black"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvRouteAdminAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/lnAddRoute"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/radius10"
                android:backgroundTint="#A5A5A5"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm lịch trình"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

            </LinearLayout>





            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00cba9"
                android:text="Thêm chuyến"
                android:textSize="18dp"
                android:textColor="@color/black"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>