<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius10"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/lnItemAdminTicket">

    <LinearLayout
        android:id="@+id/lnMount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ticket" />

        <TextView
            android:id="@+id/tvItemAdminTicketMount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="xN"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tvItemAdminTicketTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="23:07"
            android:layout_marginLeft="10dp"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvItemAdminTicketName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnMount"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:hint="LÃª Quang Huy"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FBC7C7"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/imgItemAdminTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvItemAdminTicketPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0966554xxx"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@id/tvItemAdminTicketName"/>


</RelativeLayout>